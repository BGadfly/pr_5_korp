@model ProductionManagementSystem.ViewModels.OrderListViewModel

@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Product</th>
            <th>Quantity</th>
            <th>Status</th>
            <th>Due Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr @(order.Status == "Completed" ? "class='table-success'" : (order.Status == "Cancelled" ? "class='table-danger'" : ""))>
                <td>@order.Id</td>
                <td>@order.Product.Name</td>
                <td>@order.Quantity</td>
                <td>@order.Status</td>
                <td>@order.EstimatedEndDate.ToString("d")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Create New Order</a>