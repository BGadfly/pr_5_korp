@model ProductionManagementSystem.ViewModels.MaterialListViewModel

@{
    ViewData["Title"] = "Materials";
}

<h1>Materials</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Unit of Measure</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var material in Model.Materials)
        {
            <tr @(material.Quantity < material.MinimalStock ? "class='bg-danger'" : "")>
                <td>@material.Name</td>
                <td>@material.Quantity @material.UnitOfMeasure</td>
                <td>@material.UnitOfMeasure</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@material.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@material.Id" class="btn btn-info btn-sm">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add New Material</a>